<h1>Listing Articles</h1>

<%= link_to 'New article', new_user_article_path(@user) %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <!-- TODO show action only need article.id -->
        <td><%= link_to 'Show', user_article_path(@user, article) %></td>
        <td><%= link_to 'Edit', edit_user_article_path(@user, article) %></td>
        <td><%= link_to 'Destroy', user_article_path(@user, article),
            method: :delete, data: { confirm: 'Are you sure?'} %></td>

      </tr>
  <% end %>
</table>